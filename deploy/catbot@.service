[Unit]
Description=catbot Feishu AI Bot
After=network.target
Wants=network-online.target

[Service]
Type=simple
User=%i
WorkingDirectory=/home/%i/work/catbot
EnvironmentFile=/home/%i/work/catbot/.env
ExecStart=/usr/bin/python3 run.py
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal
# 崩溃后最多重启 5 次
StartLimitIntervalSec=300
StartLimitBurst=5

[Install]
WantedBy=multi-user.target
