[Unit]
Description=catbot Feishu AI Bot
After=network.target

[Service]
Type=simple
User=ubuntu
WorkingDirectory=/home/ubuntu/work/catbot
EnvironmentFile=/home/ubuntu/work/catbot/.env
ExecStart=/usr/bin/python3 examples/feishu_bot.py
Restart=on-failure
RestartSec=10
StandardOutput=journal
StandardError=journal

[Install]
WantedBy=multi-user.target
